             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Title="連携"
             x:Class="Eri.Views.LinkPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="アップロード" HorizontalOptions="Center"  BackgroundColor="#b1d6a6" WidthRequest="250"/>
